---
import Logo from '../components/Logo.astro';

const pages = Object.values(await import.meta.glob('../pages/[^_]*.{astro,md,mdx}', { eager: true }));
// Define custom order for specific pages (add more as needed)
const customOrder = {
    '/': 0, // Home first
    '/blog': 1, // Example: About second
    '/questions': 2 // Example: Contact third
    // Add other pages with their desired order
};

const navItems = pages
    .filter((p) => !p.file.includes('[...404]'))
    .map((p) => {
        let href = p.file
            .replace(/\\/g, '/')
            .replace(/^.*\/pages\//, '/')
            .replace(/\.(astro|mdx?|md)$/, '')
            .replace(/\/index$/, '/');
        if (href === '') href = '/';
        const linkText =
            href === '/'
                ? 'Home'
                : href
                      .replace(/^\//, '')
                      .replace(/-/g, ' ')
                      .replace(/\b\w/g, (c) => c.toUpperCase());
        return { linkText, href };
    })
    // Sort items: first by custom order, then alphabetically
    .sort((a, b) => {
        const orderA = customOrder[a.href] ?? Number.MAX_SAFE_INTEGER;
        const orderB = customOrder[b.href] ?? Number.MAX_SAFE_INTEGER;

        if (orderA !== orderB) {
            return orderA - orderB;
        }
        // If no custom order, sort alphabetically by link text
        return a.linkText.localeCompare(b.linkText);
    });
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
