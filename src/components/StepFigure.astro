---
// src/components/StepFigure.astro
import { Image } from 'astro:assets';

export interface Props {
    src: any; // Image import
    alt: string;
    title: string;
    titleLevel?: 'h2' | 'h3';
    stepNumber?: number;
    width?: number;
    height?: number;
    imageClass?: string;
}

const { src, alt, title, titleLevel = 'h2', stepNumber, width = 800, height = 600, imageClass = '' } = Astro.props;

const Heading = titleLevel === 'h2' ? 'h2' : 'h3';
---

<figure class="mb-8 group relative bg-white/5 p-6 rounded-lg border border-white/10 hover:border-primary/50 transition-colors">
    {
        stepNumber && (
            <div class="absolute -top-3 -right-3 w-8 h-8 flex items-center justify-center bg-primary text-white rounded-full font-bold text-sm">
                {stepNumber}
            </div>
        )
    }

    <div class="mb-4 overflow-hidden rounded-lg">
        <Image
            src={src}
            alt={alt}
            width={width}
            height={height}
            class={`w-full h-auto ${imageClass}`}
            loading="lazy"
            decoding="async"
            formats={['avif', 'webp', 'jpg']}
            quality={100}
        />
    </div>

    <figcaption class="mt-4">
        <Heading class="text-xl font-bold mb-2 text-white group-hover:text-primary transition-colors">
            {title}
        </Heading>
        <div class="text-gray-300">
            <slot />
        </div>
    </figcaption>
</figure>
