---
// src/components/StepFigure.astro
import { Image } from 'astro:assets';

export interface Props {
    src: any; // Image import
    alt: string;
    title: string;
    titleLevel?: 'h2' | 'h3';
    stepNumber?: number;
    width?: number;
    height?: number;
    imageClass?: string;
    size?: 'sm' | 'md' | 'lg';
}

const { 
    src, 
    alt, 
    title, 
    titleLevel = 'h2', 
    stepNumber, 
    width = 800, 
    height = 600, 
    imageClass = '',
    size = 'md'
} = Astro.props;

const sizeClasses = {
    sm: 'max-w-lg',
    md: 'max-w-2xl',
    lg: 'max-w-4xl'
};

const Heading = titleLevel === 'h2' ? 'h2' : 'h3';
---

<figure class={`mb-8 group relative bg-white/5 p-4 sm:p-6 rounded-lg border border-white/10 hover:border-primary/50 transition-colors ${sizeClasses[size]}`}>
    <div class="flex items-center justify-between mb-4">
        <Heading class="text-lg sm:text-xl font-bold text-white group-hover:text-primary transition-colors">
            {title}
        </Heading>
        {stepNumber && (
            <div class="w-6 h-6 sm:w-7 sm:h-7 flex items-center justify-center bg-primary text-white rounded-full font-bold text-xs sm:text-sm">
                {stepNumber}
            </div>
        )}
    </div>

    <div class="overflow-hidden rounded-lg">
        <Image
            src={src}
            alt={alt}
            width={width}
            height={height}
            class={`w-full h-auto ${imageClass}`}
            loading="lazy"
            decoding="async"
            formats={['avif', 'webp', 'jpg']}
            quality={100}
        />
    </div>

    <figcaption class="mt-3 text-gray-300">
        <slot />
    </figcaption>
</figure>
