---
import Layout from '../layouts/Layout.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
Blog
`;

// Import all markdown files from the posts directory
const allPosts = await Astro.glob('../pages/posts/*.md');

// Sort posts by date in descending order (newest first)
const posts = allPosts
    .filter((post) => !post.file.split('/').pop()?.startsWith('_'))
    .sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf())
    .reverse()
    .map((post) => ({
        title: post.frontmatter.title || 'Untitled Post',
        slug: post.file.split('/').pop()?.replace(/\.md$/, ''),
        date: post.frontmatter.date,
        description: post.frontmatter.description
    }));
---

<Layout title="Blog">
    <h1 class="mb-10">Blog</h1>
    <h2>Posts</h2>

    <ul class="space-y-6">
        {
            posts.map((post) => (
                <li class="border-b border-gray-200 pb-4">
                    <a href={`/posts/${post.slug}`} class="text-blue-600 hover:underline text-xl font-medium">
                        {post.title}
                    </a>
                    {post.date && (
                        <p class="text-sm text-gray-500 mt-1">
                            {new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                        </p>
                    )}
                    {post.description && <p class="text-gray-600 mt-2">{post.description}</p>}
                </li>
            ))
        }
    </ul>
</Layout>
